<assembly>
    <id>release</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>config</directory>
            <outputDirectory>/${artifactId}/</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>content</directory>
            <outputDirectory>/${artifactId}/content</outputDirectory>
            <includes>                
                <include>*.jpg</include>
				<include>*.jpeg</include>
				<include>*.png</include>
            </includes>
        </fileSet>
       
    </fileSets>
    <dependencySets>
        <dependencySet>
			<useProjectAttachments>true</useProjectAttachments>
			
			<outputDirectory>/${artifactId}</outputDirectory>
			<outputFileNameMapping>shared.swf</outputFileNameMapping>
			<includes>
				<include>${project.groupId}:${project.artifactId}:swf:swf</include>
			</includes>
		</dependencySet>
    </dependencySets>
</assembly>
